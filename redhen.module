}

/**
 * Theme handler for Redhen landing page
 *
 * @param $variables
 * @return array
 */
function theme_redhen_home($variables) {
  $items = $variables['items'];
  $list = array();
  $path = drupal_get_path('module', 'redhen');
  foreach ($items as $item) {
    $list[] = l($item['title'], $item['path']) . '<div>' . $item['description'] . '</div>';
  }
  $render = array(
    'logo' => array(
      '#theme' => 'image',
      '#path' => $path . '/misc/redhen_logo.png',
      '#alt' => t('Redhen CRM'),
      '#attributes' => array('id' => 'redhen-logo')
    ),
    'links' => array(
      '#theme' => 'item_list',
      '#items' => $list
    ),
    '#attached' => array(
      'css' => array($path . '/misc/redhen.css')
    )
  );

  return $render;
}
