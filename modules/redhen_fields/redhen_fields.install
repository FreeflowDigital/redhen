<?php

/**
 * @file
 * Install, update and uninstall functions for the text module.
 */

/**
 * Implements hook_field_schema().
 */
function redhen_fields_field_schema($field) {
  switch ($field['type']) {
    case 'redhen_email':
      $columns = array(
        'value' => array(
          'type' => 'varchar',
          'length' => 255,
          'not null' => FALSE,
        ),
        'hold' => array(
          'type' => 'int',
          'unsigned' => TRUE,
          'default' => 0,
        ),
        'bulk' => array(
          'type' => 'int',
          'unsigned' => TRUE,
          'default' => 0,
        ),
      );
      break;
  }
  $columns += array(
    'default' => array(
      'type' => 'int',
      'unsigned' => TRUE,
      'default' => 0,
    ),
    'label_id' => array(
      'type' => 'int',
      'unsigned' => TRUE,
      'default' => 0,
    ),
  );
  return array(
    'columns' => $columns,
    'indexes' => array(),
  );
}

/**
 * Implements hook_uninstall().
 */
function redhen_fields_uninstall() {
  field_delete_field(REDHEN_CONTACT_EMAIL_FIELD);
}
